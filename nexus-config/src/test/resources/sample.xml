<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns="http://nexus.github.com/config">

    <jdbc>
        <username>scott</username>
        <password>tiger</password>
        <url>foo:bar</url>
    </jdbc>
    
    <server>
        <port>99</port>
        
        <ssl>
            <tls>STRICT</tls>
            <serverKeyStore>/keystorepath</serverKeyStore>
            <serverKeyStorePassword>serverKeyStorePassword</serverKeyStorePassword>
            <serverTrustStore>/serverTrustStore</serverTrustStore>
            
            <serverTrustStorePassword>serverTrustStorePassword</serverTrustStorePassword>
            <serverTrustMode>TOFU</serverTrustMode>
            
            
            <clientKeyStore>/clientKeyStore</clientKeyStore>
            <clientKeyStorePassword>clientKeyStorePassword</clientKeyStorePassword>
            
            <clientTrustStore>/clientTrustStore</clientTrustStore>
            <clientTrustStorePassword>clientTrustStorePassword</clientTrustStorePassword>
            <clientTrustMode>TOFU</clientTrustMode>
            
            <knownClientsFile>/pathtonoclients</knownClientsFile>
            <knownServersFile>/pathtoknownservers</knownServersFile>
            
            
        </ssl>
        
    </server>

    <peer>
        <url>http://bogus1.com</url>
    </peer>
    
    <peer>
        <url>http://bogus2.com</url>
    </peer>
    

    <privateKey type="locked">
        <value>PRIVATEKEY</value>
        <password>TOP_SECRET</password>
    </privateKey>
    
    <publicKey>
        <path>/somepath</path>
    </publicKey>
    
    <unixSocketFile>/tmp/bogus.socket</unixSocketFile>
    
    
    
